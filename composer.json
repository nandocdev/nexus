{
    "name": "ferncastillo/nexus-core",
    "type": "project",
    "description": "NexusCore PHP Framework - El n√∫cleo conectado para aplicaciones PHP profesionales",
    "keywords": ["framework", "php", "mvc", "router", "database", "container"],
    "license": "MIT",
    "version": "1.0.0",
    "readme": "README.md",
    "homepage": "https://github.com/nandocdev/nexus-core",
    "support": {
        "email": "ferncastillo@css.gob.pa",
        "issues": "https://github.com/nandocdev/nexus-core/issues",
        "source": "https://github.com/nandocdev/nexus-core"
    },
    "authors": [
        {
            "name": "Fernando Castillo",
            "email": "ferncastillo@css.gob.pa",
            "homepage": "https://github.com/nandocdev",
            "role": "Lead Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nexus\\": "core/",
            "App\\": "app/",
            "Migrations\\": "database/migrations/",
            "Seeders\\": "database/seeders/"
        },
        "files": [
            "core/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.9"
    },
    "scripts": {
        "dev": "php -S 0.0.0.0:8080 -t public",
        "start": "php -S 0.0.0.0:8080 -t public",
        "serve": [
            "@dev"
        ],
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse",
        "lint": "phpcs --standard=PSR12 app core",
        "lint-fix": "phpcbf --standard=PSR12 app core",
        "post-install-cmd": [
            "echo 'NexusCore framework installed successfully!'",
            "php -r \"if (!file_exists('.env')) copy('.env.example', '.env');\""
        ],
        "post-update-cmd": [
            "echo 'NexusCore framework updated!'"
        ],
        "optimize": [
            "php -r \"if (file_exists('vendor/autoload.php')) require 'vendor/autoload.php'; if (class_exists('Nexus\\\\Core\\\\Optimizer')) Nexus\\\\Core\\\\Optimizer::optimize();\""
        ]
    },
    "scripts-descriptions": {
        "dev": "Start development server",
        "test": "Run PHPUnit tests",
        "analyse": "Run PHPStan static analysis",
        "lint": "Check code style with PHP_CodeSniffer",
        "optimize": "Optimize framework performance"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}