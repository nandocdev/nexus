{
    "name": "ferncastillo/nexus-core",
    "type": "project",
    "description": "NexusCore PHP Framework - El n√∫cleo conectado para aplicaciones PHP profesionales",
    "keywords": ["framework", "php", "mvc", "router", "database", "container"],
    "license": "MIT",
    "readme": "README.md",
    "homepage": "https://github.com/nandocdev/nexus-core",
    "support": {
        "email": "ferncastillo@css.gob.pa",
        "issues": "https://github.com/nandocdev/nexus-core/issues",
        "source": "https://github.com/nandocdev/nexus-core"
    },
    "authors": [
        {
            "name": "Fernando Castillo",
            "email": "ferncastillo@css.gob.pa",
            "homepage": "https://github.com/nandocdev",
            "role": "Lead Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nexus\\": "core/",
            "App\\": "app/",
            "Migrations\\": "database/migrations/",
            "Seeders\\": "database/seeders/"
        },
        "files": [
            "core/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-session": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.9"
    },
    "scripts": {
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "php -S 0.0.0.0:8080 -t public"
        ],
        "start": [
            "php -S 0.0.0.0:8080 -t public"
        ],
        "serve": [
            "@dev"
        ],
        "test": "@php vendor/bin/phpunit",
        "test-coverage": "@php vendor/bin/phpunit --coverage-html coverage",
        "analyse": "@php vendor/bin/phpstan analyse",
        "lint": "@php vendor/bin/phpcs --standard=PSR12 app core",
        "lint-fix": "@php vendor/bin/phpcbf --standard=PSR12 app core",
        "post-install-cmd": [
            "@php -r \"echo '‚úÖ NexusCore framework installed successfully!\\n';\"",
            "@php -r \"if (!file_exists('.env') && file_exists('.env.example')) { copy('.env.example', '.env'); echo 'üìù .env file created from .env.example\\n'; }\""
        ],
        "post-update-cmd": [
            "@php -r \"echo '‚úÖ NexusCore framework updated!\\n';\""
        ]
    },
    "scripts-descriptions": {
        "dev": "Start development server with full diagnostics and route info",
        "start": "Start production server with basic info",
        "serve": "Alias for dev command",
        "test": "Run PHPUnit tests",
        "analyse": "Run PHPStan static analysis",
        "lint": "Check code style with PHP_CodeSniffer",
        "lint-fix": "Auto-fix code style issues"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "8.1"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}